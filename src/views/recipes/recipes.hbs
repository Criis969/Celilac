{{#if recipes}}
<div class="container p-4">
    <div class="row">
        {{#each recipes}}
        <div class="col-md-4">
            <a href="/recipes/{{id}}" style="text-decoration: none; color: black">
                <div class="card">
                    <img src="{{image_link}}" alt="No imagen" height="300">
                    <div class="card-body">
                        <h5 class="card-title">{{recipe_name}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{timeago created_at}}</h6>
                        <p class="card-text">Tiempo: {{duration}}</p>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
</div>
{{/if}}